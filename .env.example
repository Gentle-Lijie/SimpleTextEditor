# ===========================================
# SimpleTextEditor Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values

# ===========================================
# Server Ports
# ===========================================
# Frontend port (production Docker)
FRONTEND_PORT=3000
# Backend port
PORT=3001

# ===========================================
# Backend Configuration
# ===========================================
NODE_ENV=development

# ===========================================
# MySQL Database Configuration
# ===========================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=simpletexteditor

# ===========================================
# GitHub Image Storage (图床配置)
# ===========================================
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_OWNER=Gentle-Lijie
GITHUB_REPO=SimpleTextEditor
GITHUB_BRANCH=images

# ===========================================
# Access Password (访问密码)
# ===========================================
# 必填：进入主页面前的访问密码
PASSWORD=your_secure_password

# ===========================================
# Frontend Configuration (Vite)
# ===========================================
# Development
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001

# Production (uncomment for production)
# VITE_API_URL=/api
# VITE_WS_URL=wss://your-domain.com

VITE_APP_TITLE="SimpleTextEditor"
VITE_APP_SHORT="STE"
