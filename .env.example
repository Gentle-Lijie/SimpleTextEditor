# ===========================================
# SimpleTextEditor Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values

# ===========================================
# Server Ports (Docker external ports)
# ===========================================
# Frontend port (maps to nginx:80)
FRONTEND_PORT=3000
# Backend port (maps to node:3001)
BACKEND_PORT=3001

# ===========================================
# Backend Configuration
# ===========================================
NODE_ENV=development

# ===========================================
# MySQL Database Configuration
# ===========================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password
DB_NAME=simpletexteditor

# ===========================================
# GitHub Image Storage (图床配置)
# ===========================================
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_OWNER=Gentle-Lijie
GITHUB_REPO=SimpleTextEditor
GITHUB_BRANCH=images

# ===========================================
# Access Password (访问密码)
# ===========================================
# 必填：进入主页面前的访问密码
PASSWORD=your_secure_password

# ===========================================
# Frontend Configuration (Vite)
# ===========================================
# API and WebSocket URLs
# Development: http://localhost:3001, ws://localhost:3001
# Production: https://your-domain.com, wss://your-domain.com
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3001

# Application title (shown in header)
VITE_APP_TITLE="SimpleTextEditor"
# Short title (shown on mobile)
VITE_APP_SHORT="STE"
